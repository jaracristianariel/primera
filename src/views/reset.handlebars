<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
    <h1 class="bg-success-subtle p-2 text-center text-success w-100">RESET FORM</h1>
    <form class="m-3 d-flex flex-column justify-content-evenly flex-wrap align-items-center" style="width: 380px;">
        <input class="m-2 p-2 text-center w-100" type="text" name="email" id="email" value="{{email}}" disabled />
        <input class="m-2 p-2 text-center w-100" type="password" name="password1" id="password1" placeholder="Enter new password!" />
        <input class="m-2 p-2 text-center w-100" type="password" name="password2" id="password2" placeholder="Verify new password!" />
        <input class="m-2 p-2 text-center btn btn-success w-100" type="button" id="reset" value="Reset!" />
    </form>
</main>
<script src="/scripts/reset.js"></script>
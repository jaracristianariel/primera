<h1 class="bg-success-subtle p-2 text-center text-success w-100">DETAILS</h1>

<section class="d-flex flex-wrap justify-content-center">
    <div class="card m-1" style="width: 18rem;">
        <img src={{product.image}} class="card-img-top object-fit-cover" alt={{product._id}} style="height: 12rem;">
        <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title text-center">{{product.title}}</h5>
            <p class="card-text text-center">USD $ {{product.price}}</p>
            <button class="btn btn-success add-to-cart-btn text-center" data-product-id="{{product._id}}">Add to cart</button>
        </div>
    </div>
</section>

<script src="/scripts/details.js"></script>
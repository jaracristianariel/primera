<h1 class="bg-success-subtle p-2 text-center text-success w-100">PRODUCTS</h1>

<section class="d-flex flex-wrap justify-content-center">
    {{#each products}}
    <div class="card m-1" style="width: 18rem;">
        <img src={{this.image}} class="card-img-top object-fit-cover" alt={{this._id}} style="height: 12rem;">
        <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title text-center">{{this.title}}</h5>
            <p class="card-text text-center">{{this.description}}</p>
            <p class="card-text text-center">USD $ {{this.price}}</p>
            <a href="/details/{{this._id}}" class="btn btn-success">+info</a>
        </div>
    </div>
    {{/each}}
</section>